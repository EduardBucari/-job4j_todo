<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>GetTasks</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.GetTasks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTask</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.AddTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeTaskStatus</servlet-name>
        <servlet-class>ru.job4j.todo.servlet.ChangeTaskStatus</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetTasks</servlet-name>
        <url-pattern>/getTasks.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTask</servlet-name>
        <url-pattern>/addTask.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeTaskStatus</servlet-name>
        <url-pattern>/changeTaskStatus.do</url-pattern>
    </servlet-mapping>
</web-app>